<UserControl x:Class="InfraScheduler.Database.Views.DatabaseLandingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfraScheduler.Database.Views"
        mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/InfraScheduler;component/FluentColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Breadcrumb -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
            <TextBlock Text="Home" Foreground="#0078D4" Cursor="Hand"/>
            <TextBlock Text=" > " Foreground="#666666"/>
            <TextBlock Text="Database Management" Foreground="#666666"/>
        </StackPanel>

        <!-- Header -->
        <StackPanel Grid.Row="1" Margin="16,8,16,16">
            <TextBlock Text="{Binding SectionTitle}" 
                      FontSize="24" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding SectionDescription}" 
                      FontSize="14" Foreground="#666666"
                      Margin="0,4,0,12"/>
            <TextBox Text="Search database options" 
                     Height="32" Padding="8,6"
                     BorderBrush="#E0E0E0"/>
        </StackPanel>

        <!-- Content Grid -->
        <ScrollViewer Grid.Row="2" Margin="16,0,16,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Site Info Database -->
                    <Grid Grid.Column="0" Margin="0,0,8,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToSiteInfoCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Site Info Database" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage site information and details" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Client Info Database -->
                    <Grid Grid.Column="1" Margin="8,0,8,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToClientInfoCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Client Info Database" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage client information and contacts" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Technician Info Database -->
                    <Grid Grid.Column="2" Margin="8,0,0,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToTechnicianInfoCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Technician Info Database" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage technician profiles and skills" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Second Row -->
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Subcontractors Info Database -->
                    <Grid Grid.Column="0" Margin="0,0,8,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToSubcontractorInfoCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Subcontractors Info Database" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage subcontractor information and capabilities" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Project Template Database -->
                    <Grid Grid.Column="1" Margin="8,0,8,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToProjectTemplateCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Project Template Database" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage project templates and workflows" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Job Template Database -->
                    <Grid Grid.Column="2" Margin="8,0,0,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToJobTemplateCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Job Template Database" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage job templates and procedures" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Third Row -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- JobTask Template Database -->
                    <Grid Grid.Column="0" Margin="0,0,8,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToJobTaskTemplateCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="JobTask Template Database" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage job task templates and dependencies" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Settings -->
                    <Grid Grid.Column="1" Margin="8,0,8,0" Background="White" Cursor="Hand" Opacity="0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8">
                            <TextBlock Text="Settings" FontWeight="SemiBold"/>
                            <TextBlock Text="Configure database management settings" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Help -->
                    <Grid Grid.Column="2" Margin="8,0,0,0" Background="White" Cursor="Hand" Opacity="0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8">
                            <TextBlock Text="Help" FontWeight="SemiBold"/>
                            <TextBlock Text="Get support and documentation" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl> 