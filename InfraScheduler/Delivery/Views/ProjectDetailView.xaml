<UserControl x:Class="InfraScheduler.Delivery.Views.ProjectDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InfraScheduler.Delivery.ViewModels"
             FontFamily="Segoe UI">

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="24,16,24,16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Home" Foreground="#0078D4" FontSize="14" FontWeight="Normal"/>
                    <TextBlock Text=" > " Foreground="#666666" FontSize="14" Margin="8,0,8,0"/>
                    <TextBlock Text="Delivery" Foreground="#666666" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text=" > " Foreground="#666666" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Project Details" Foreground="#666666" FontSize="14" FontWeight="Normal"/>
                </StackPanel>
                
                <TextBlock Text="Project Management" FontSize="32" FontWeight="Light" Foreground="#333333"/>
                <TextBlock Text="Manage project details, workflows, and progress tracking" FontSize="16" Foreground="#666666" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24">
            <StackPanel>
                <!-- Project Form -->
                <Border Background="White" CornerRadius="4" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Project Information" FontSize="20" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Width="400" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8" Height="36" Margin="0,4,0,12" FontSize="14"/>

                            <TextBlock Text="Description:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,8,0,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Width="400" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8" Height="80" Margin="0,4,0,12" FontSize="14"
                                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                            <TextBlock Text="Start Date:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                            <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding StartDate}" Width="200"
                                        Height="36" Margin="0,4,0,12" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>

                            <TextBlock Text="End Date:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                            <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding EndDate}" Width="200"
                                        Height="36" Margin="0,4,0,12" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>

                            <TextBlock Text="Status:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                            <ComboBox Grid.Row="4" Grid.Column="1" Width="200" SelectedItem="{Binding Status}"
                                      Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8" Height="36" Margin="0,4,0,12" FontSize="14">
                                <ComboBoxItem Content="Planning"/>
                                <ComboBoxItem Content="In Progress"/>
                                <ComboBoxItem Content="On Hold"/>
                                <ComboBoxItem Content="Completed"/>
                                <ComboBoxItem Content="Cancelled"/>
                            </ComboBox>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <Button Width="100" Content="Save" Margin="0,0,10,0" Command="{Binding SaveCommand}" 
                                    Background="#0078D4" Foreground="White" Padding="16,8" BorderThickness="0" FontSize="14"/>
                            <Button Width="100" Content="Delete" Command="{Binding DeleteCommand}" 
                                    Background="#E81123" Foreground="White" Padding="16,8" BorderThickness="0" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Projects List -->
                <Border Background="White" CornerRadius="4" Padding="24">
                    <StackPanel>
                        <TextBlock Text="Projects" FontSize="20" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,16"/>
                        
                        <DataGrid ItemsSource="{Binding Projects}"
                                  SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                                  AutoGenerateColumns="False" IsReadOnly="True"
                                  Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  MaxHeight="400">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=d}" Width="120"/>
                                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=d}" Width="120"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Progress" Binding="{Binding WorkflowProgress, StringFormat=P0}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 