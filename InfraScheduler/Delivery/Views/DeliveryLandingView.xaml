<UserControl x:Class="InfraScheduler.Delivery.Views.DeliveryLandingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfraScheduler.Delivery.Views"
        mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/InfraScheduler;component/FluentColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Breadcrumb -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16,16,16,0">
            <TextBlock Text="Home" Foreground="#0078D4" Cursor="Hand"/>
            <TextBlock Text=" > " Foreground="#666666"/>
            <TextBlock Text="Delivery Management" Foreground="#666666"/>
        </StackPanel>

        <!-- Header -->
        <StackPanel Grid.Row="1" Margin="16,8,16,16">
            <TextBlock Text="{Binding SectionTitle}" 
                      FontSize="24" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding SectionDescription}" 
                      FontSize="14" Foreground="#666666"
                      Margin="0,4,0,12"/>
            <TextBox Text="Search delivery options" 
                     Height="32" Padding="8,6"
                     BorderBrush="#E0E0E0"/>
        </StackPanel>

        <!-- Content Grid -->
        <ScrollViewer Grid.Row="2" Margin="16,0,16,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Projects List Management -->
                    <Grid Grid.Column="0" Margin="0,0,8,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToProjectsListCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Projects List Management" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage project listings and details" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Delivery Management -->
                    <Grid Grid.Column="1" Margin="8,0,8,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToDeliveryManagementCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Delivery Management" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage delivery schedules and logistics" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Track Record -->
                    <Grid Grid.Column="2" Margin="8,0,0,0" Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8" Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToTrackRecordCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Track Record" FontWeight="SemiBold"/>
                            <TextBlock Text="View delivery history and performance" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Second Row -->
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Scheduling -->
                    <Grid Grid.Column="0" Margin="0,0,8,0" Background="White" Cursor="Hand" Opacity="0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToSchedulingCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Scheduling" FontWeight="SemiBold"/>
                            <TextBlock Text="Schedule deliveries and appointments" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Resources -->
                    <Grid Grid.Column="1" Margin="8,0,8,0" Background="White" Cursor="Hand" Opacity="0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8">
                            <StackPanel.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToResourcesCommand}"/>
                            </StackPanel.InputBindings>
                            <TextBlock Text="Resources" FontWeight="SemiBold"/>
                            <TextBlock Text="Manage delivery resources and personnel" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Reports -->
                    <Grid Grid.Column="2" Margin="8,0,0,0" Background="White" Cursor="Hand" Opacity="0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8">
                            <TextBlock Text="Reports" FontWeight="SemiBold"/>
                            <TextBlock Text="Generate delivery reports and analytics" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Third Row -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Quality Control -->
                    <Grid Grid.Column="0" Margin="0,0,8,0" Background="White" Cursor="Hand" Opacity="0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8">
                            <TextBlock Text="Quality Control" FontWeight="SemiBold"/>
                            <TextBlock Text="Ensure delivery quality standards" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Settings -->
                    <Grid Grid.Column="1" Margin="8,0,8,0" Background="White" Cursor="Hand" Opacity="0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8">
                            <TextBlock Text="Settings" FontWeight="SemiBold"/>
                            <TextBlock Text="Configure delivery management settings" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>

                    <!-- Help -->
                    <Grid Grid.Column="2" Margin="8,0,0,0" Background="White" Cursor="Hand" Opacity="0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="#0078D4"/>
                        <StackPanel Grid.Column="1" Margin="12,8,8,8">
                            <TextBlock Text="Help" FontWeight="SemiBold"/>
                            <TextBlock Text="Get support and documentation" 
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl> 