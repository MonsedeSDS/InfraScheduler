<UserControl x:Class="InfraScheduler.Core.Views.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="280"
             FontFamily="Segoe UI"
             Background="#F3F3F3">

    <UserControl.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Fill="Black" 
                                           Width="16" 
                                           Height="16" 
                                           Margin="0,0,12,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="12,20,0,8"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8">
            <StackPanel>
                <!-- CORE Section -->
                <TextBlock Text="CORE" 
                           Style="{StaticResource NavHeaderStyle}"
                           Margin="12,16,0,8"/>
                <Button Content="Home" 
                        Command="{Binding ShowMainLandingCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Admin" 
                        Command="{Binding ShowAdminLandingCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        IsEnabled="False"/>
                <Button Content="Account" 
                        Command="{Binding ShowAccountManagementLandingCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        IsEnabled="False"/>

                <!-- MODULES Section -->
                <TextBlock Text="MODULES" Style="{StaticResource NavHeaderStyle}"/>
                <Button Content="Delivery" 
                        Command="{Binding ShowDeliveryLandingCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Inventory" 
                        Command="{Binding ShowInventoryLandingCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Knowledge Centre" 
                        Command="{Binding ShowDatabaseLandingCommand}"
                        Style="{StaticResource NavButtonStyle}"/>

                <!-- SUPPORT Section -->
                <TextBlock Text="SUPPORT" Style="{StaticResource NavHeaderStyle}"/>
                <Button Content="Settings" 
                        Command="{Binding ShowSettingsLandingCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        IsEnabled="False"/>
                <Button Content="Help" 
                        Command="{Binding ShowHelpLandingCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        IsEnabled="False"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 