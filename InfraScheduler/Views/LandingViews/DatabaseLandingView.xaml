<UserControl x:Class="InfraScheduler.Views.LandingViews.SiteManagementLandingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfraScheduler.Views"
        mc:Ignorable="d">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/InfraScheduler;component/FluentColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource SystemControlBackgroundAltHighBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}" 
                BorderBrush="{StaticResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,0,1">
            <StackPanel Margin="20,16">
                <TextBlock Text="{Binding SectionTitle}" 
                           FontSize="24" FontWeight="SemiBold" 
                           Foreground="{StaticResource SystemControlForegroundBaseHighBrush}"/>
                <TextBlock Text="{Binding SectionDescription}" 
                           FontSize="14" Margin="0,4,0,0"
                           Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"/>
            </StackPanel>
        </Border>

        <!-- Content Section -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Metrics Cards -->
                <TextBlock Text="Site Overview" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{StaticResource SystemControlForegroundBaseHighBrush}" 
                           Margin="0,0,0,16"/>
                
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Sites -->
                    <Border Grid.Column="0" Margin="0,0,8,0" 
                            Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderBrush="{StaticResource SystemControlForegroundBaseLowBrush}" 
                            BorderThickness="1" CornerRadius="4">
                        <StackPanel Margin="16" HorizontalAlignment="Center">
                            <TextBlock Text="🏢" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalSites}" FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource SystemControlForegroundBaseHighBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Sites" FontSize="12" 
                                       Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Clients -->
                    <Border Grid.Column="1" Margin="4,0,4,0" 
                            Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderBrush="{StaticResource SystemControlForegroundBaseLowBrush}" 
                            BorderThickness="1" CornerRadius="4">
                        <StackPanel Margin="16" HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalClients}" FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource SystemControlForegroundBaseHighBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total Clients" FontSize="12" 
                                       Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Site Owners -->
                    <Border Grid.Column="2" Margin="4,0,4,0" 
                            Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderBrush="{StaticResource SystemControlForegroundBaseLowBrush}" 
                            BorderThickness="1" CornerRadius="4">
                        <StackPanel Margin="16" HorizontalAlignment="Center">
                            <TextBlock Text="🏠" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalSiteOwners}" FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource SystemControlForegroundBaseHighBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Site Owners" FontSize="12" 
                                       Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Site Tenants -->
                    <Border Grid.Column="3" Margin="4,0,4,0" 
                            Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderBrush="{StaticResource SystemControlForegroundBaseLowBrush}" 
                            BorderThickness="1" CornerRadius="4">
                        <StackPanel Margin="16" HorizontalAlignment="Center">
                            <TextBlock Text="🏘️" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalSiteTenants}" FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource SystemControlForegroundBaseHighBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Site Tenants" FontSize="12" 
                                       Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Subcontractors -->
                    <Border Grid.Column="4" Margin="8,0,0,0" 
                            Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderBrush="{StaticResource SystemControlForegroundBaseLowBrush}" 
                            BorderThickness="1" CornerRadius="4">
                        <StackPanel Margin="16" HorizontalAlignment="Center">
                            <TextBlock Text="👷" FontSize="24" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalSubcontractors}" FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource SystemControlForegroundBaseHighBrush}" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Subcontractors" FontSize="12" 
                                       Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Quick Actions -->
                <TextBlock Text="Quick Actions" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{StaticResource SystemControlForegroundBaseHighBrush}" 
                           Margin="0,0,0,16"/>
                
                <ItemsControl ItemsSource="{Binding QuickActions}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="240" Height="120" Margin="0,0,16,16" 
                                    Background="{StaticResource SystemControlBackgroundChromeMediumLowBrush}"
                                    BorderBrush="{StaticResource SystemControlForegroundBaseLowBrush}" 
                                    BorderThickness="1" CornerRadius="4"
                                    Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding Command}"/>
                                </Border.InputBindings>
                                <StackPanel Margin="16" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Icon}" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" 
                                               Foreground="{StaticResource SystemControlForegroundBaseHighBrush}" 
                                               HorizontalAlignment="Center" Margin="0,8,0,4"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" 
                                               Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" 
                                               HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Refresh Button -->
                <Button Content="Refresh Metrics" Command="{Binding RefreshMetricsCommand}" 
                        HorizontalAlignment="Left" Margin="0,16,0,0" Padding="16,8"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 
