<UserControl x:Class="InfraScheduler.Views.LandingViews.MainLandingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfraScheduler.Views"
        mc:Ignorable="d"
        FontFamily="Segoe UI">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/InfraScheduler;component/FluentColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Windows 10 Header with Navigation Path -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="24,16,24,16">
            <StackPanel>
                <!-- Navigation Breadcrumb -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Home" Foreground="#0078D4" FontSize="14" FontWeight="Normal"/>
                    <TextBlock Text=" > " Foreground="#666666" FontSize="14" Margin="8,0,8,0"/>
                    <TextBlock Text="Main Dashboard" Foreground="#666666" FontSize="14" FontWeight="Normal"/>
                </StackPanel>
                
                <!-- Main Heading -->
                <TextBlock Text="Main Dashboard" FontSize="32" FontWeight="Light" Foreground="#333333"/>
                
                <!-- Subtitle -->
                <TextBlock Text="System overview and quick access to all management areas" FontSize="16" Foreground="#666666" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24">
            <StackPanel>
                <!-- Metrics Cards Section -->
                <Border Background="White" CornerRadius="4" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="System Overview" FontSize="20" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Jobs -->
                            <Border Grid.Column="0" Margin="0,0,8,0" 
                                    Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                <StackPanel Margin="16" HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ“‹" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalJobs}" FontSize="24" FontWeight="Bold" 
                                               Foreground="#333333" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Jobs" FontSize="12" 
                                               Foreground="#666666" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Active Jobs -->
                            <Border Grid.Column="1" Margin="4,0,4,0" 
                                    Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                <StackPanel Margin="16" HorizontalAlignment="Center">
                                    <TextBlock Text="âš¡" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ActiveJobs}" FontSize="24" FontWeight="Bold" 
                                               Foreground="#333333" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Active Jobs" FontSize="12" 
                                               Foreground="#666666" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Technicians -->
                            <Border Grid.Column="2" Margin="4,0,4,0" 
                                    Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                <StackPanel Margin="16" HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ‘·" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalTechnicians}" FontSize="24" FontWeight="Bold" 
                                               Foreground="#333333" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Technicians" FontSize="12" 
                                               Foreground="#666666" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Total Equipment -->
                            <Border Grid.Column="3" Margin="8,0,0,0" 
                                    Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                <StackPanel Margin="16" HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ”§" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalEquipment}" FontSize="24" FontWeight="Bold" 
                                               Foreground="#333333" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Equipment" FontSize="12" 
                                               Foreground="#666666" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Quick Actions Section -->
                <Border Background="White" CornerRadius="4" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontSize="20" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,16"/>
                        
                        <ItemsControl ItemsSource="{Binding QuickActions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="240" Height="120" Margin="0,0,16,16" 
                                            Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4"
                                            Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" Command="{Binding Command}"/>
                                        </Border.InputBindings>
                                        <StackPanel Margin="16" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}" FontSize="32" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" 
                                                       Foreground="#333333" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" 
                                                       Foreground="#666666" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Border Background="White" CornerRadius="4" Padding="24">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Refresh Metrics" Command="{Binding RefreshMetricsCommand}" 
                                Background="#0078D4" Foreground="White" Padding="16,8" BorderThickness="0" FontSize="14"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 