<UserControl x:Class="InfraScheduler.Views.JobCloseOutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E91E63" Padding="15">
            <TextBlock Text="Job Close-Out - Equipment Deployment Report" 
                       Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Job Selection Panel -->
            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="5" Padding="15" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Select Job to Close:" FontWeight="Bold" Margin="0,0,0,10"/>

                    <ComboBox Grid.Row="1" x:Name="JobsComboBox" 
                              ItemsSource="{Binding ReadyToCloseJobs}"
                              SelectedItem="{Binding SelectedJob}"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,10"
                              Padding="5"/>

                    <TextBlock Grid.Row="2" Text="Job Details:" FontWeight="Bold" Margin="0,10,0,5"/>

                    <StackPanel Grid.Row="3" Margin="0,0,0,15">
                        <TextBlock Text="{Binding SelectedJob.Description}" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding SelectedJob.Site.SiteName}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding SelectedJob.Client.Name}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding SelectedJob.Status}" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Button Grid.Row="5" Content="Close Job &amp; Generate Report" 
                            Command="{Binding CloseJobCommand}"
                            Background="#4CAF50" Foreground="White"
                            Padding="10" FontWeight="Bold"/>
                </Grid>
            </Border>

            <!-- Equipment Installation Status Panel -->
            <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="5" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Equipment Installation Status:" FontWeight="Bold" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1" x:Name="EquipmentLinesDataGrid"
                              ItemsSource="{Binding EquipmentLines}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Equipment Type" Binding="{Binding EquipmentType.Name}" Width="200"/>
                            <DataGridTextColumn Header="Planned Qty" Binding="{Binding PlannedQty}" Width="100"/>
                            <DataGridTextColumn Header="Received Qty" Binding="{Binding ReceivedQty}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            <DataGridTextColumn Header="Installed Date" Binding="{Binding InstalledDate}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <Button Content="Generate Excel Report" Command="{Binding GenerateReportCommand}"
                                Background="#2196F3" Foreground="White" Padding="10" Margin="0,0,10,0"/>
                        <Button Content="View Installation Details" Command="{Binding ViewInstallationDetailsCommand}"
                                Background="#FF9800" Foreground="White" Padding="10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl> 