<UserControl x:Class="InfraScheduler.Views.JobTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InfraScheduler.ViewModels"
             FontFamily="Segoe UI">

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Windows 10 Header with Navigation Path -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="24,16,24,16">
            <StackPanel>
                <!-- Navigation Breadcrumb -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Home" Foreground="#0078D4" FontSize="14" FontWeight="Normal"/>
                    <TextBlock Text=" > " Foreground="#666666" FontSize="14" Margin="8,0,8,0"/>
                    <TextBlock Text="Delivery" Foreground="#666666" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text=" > " Foreground="#666666" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Job Tasks" Foreground="#666666" FontSize="14" FontWeight="Normal"/>
                </StackPanel>
                
                <!-- Main Heading -->
                <TextBlock Text="Job Task Management" FontSize="32" FontWeight="Light" Foreground="#333333"/>
                
                <!-- Subtitle -->
                <TextBlock Text="Manage job tasks, dependencies, and technician assignments" FontSize="16" Foreground="#666666" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24">
            <StackPanel>
                <!-- Form Section -->
                <Border Background="White" CornerRadius="4" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Task Details" FontSize="20" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,8,0,4"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="300"
                                     Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8" Height="36" Margin="0,4,0,12" FontSize="14"/>

                            <TextBlock Text="Status:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,8,0,4"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}" Width="300"
                                     Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8" Height="36" Margin="0,4,0,12" FontSize="14"/>

                            <TextBlock Text="Start Date:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,8,0,4"/>
                            <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding StartDate}" Width="300"
                                        Height="36" Margin="0,4,0,12" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8"/>

                            <TextBlock Text="End Date:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,8,0,4"/>
                            <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding EndDate}" Width="300"
                                        Height="36" Margin="0,4,0,12" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8"/>

                            <TextBlock Text="Job ID:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,8,0,4"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding JobId, UpdateSourceTrigger=PropertyChanged}" Width="300"
                                     Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8" Height="36" Margin="0,4,0,12" FontSize="14"/>

                            <TextBlock Text="Technician:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,8,0,4"/>
                            <ComboBox Grid.Row="5" Grid.Column="1" 
                                      ItemsSource="{Binding Technicians}"
                                      SelectedValue="{Binding TechnicianId}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      Width="300"
                                      Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8" Height="36" Margin="0,4,0,12" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Dependencies Section -->
                <Border Background="White" CornerRadius="4" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Task Dependencies" FontSize="20" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Parent Task:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,8,0,4"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" 
                                      ItemsSource="{Binding Tasks}"
                                      SelectedValue="{Binding ParentTaskId}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      Margin="0,0,10,0"
                                      Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8" Height="36" FontSize="14"/>

                            <TextBlock Text="Prerequisite Task:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#333333" Margin="0,8,0,4"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" 
                                      ItemsSource="{Binding Tasks}"
                                      SelectedValue="{Binding PrerequisiteTaskId}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      Margin="0,0,10,0"
                                      Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,8" Height="36" FontSize="14"/>

                            <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Orientation="Vertical">
                                <Button Content="Add Dependency" 
                                        Command="{Binding AddDependencyCommand}"
                                        Margin="0,0,0,5"
                                        Background="#0078D4" Foreground="White" Padding="16,8" BorderThickness="0" FontSize="14"/>
                                <Button Content="Remove Dependency" 
                                        Command="{Binding RemoveDependencyCommand}"
                                        Background="White" Foreground="#0078D4" Padding="16,8" BorderBrush="#0078D4" BorderThickness="1" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Border Background="White" CornerRadius="4" Padding="24" Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Width="100" Content="Add" Margin="0,0,10,0" Command="{Binding AddJobTaskCommand}" 
                                Background="#0078D4" Foreground="White" Padding="16,8" BorderThickness="0" FontSize="14"/>
                        <Button Width="100" Content="Update" Margin="0,0,10,0" Command="{Binding UpdateJobTaskCommand}" 
                                Background="White" Foreground="#0078D4" Padding="16,8" BorderBrush="#0078D4" BorderThickness="1" FontSize="14"/>
                        <Button Width="100" Content="Delete" Margin="0,0,10,0" Command="{Binding DeleteJobTaskCommand}" 
                                Background="#E81123" Foreground="White" Padding="16,8" BorderThickness="0" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Data Grid -->
                <Border Background="White" CornerRadius="4" Padding="24">
                    <DataGrid ItemsSource="{Binding Tasks}"
                              SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="True"
                              CanUserResizeColumns="True"
                              CanUserResizeRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              MaxHeight="600">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="Job ID" Binding="{Binding JobId}" Width="100"/>
                            <DataGridTextColumn Header="Technician" Binding="{Binding Technician.Name}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
