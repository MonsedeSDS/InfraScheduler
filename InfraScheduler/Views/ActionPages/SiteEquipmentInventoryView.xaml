<UserControl x:Class="InfraScheduler.Views.SiteEquipmentInventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#607D8B" Padding="15">
            <TextBlock Text="Site Equipment Inventory - Current Equipment List" 
                       Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Site Selection Panel -->
            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="5" Padding="15" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Select Site:" FontWeight="Bold" Margin="0,0,0,10"/>

                    <ComboBox Grid.Row="1" x:Name="SitesComboBox" 
                              ItemsSource="{Binding AvailableSites}"
                              SelectedItem="{Binding SelectedSite}"
                              DisplayMemberPath="SiteName"
                              Margin="0,0,0,10"
                              Padding="5"/>

                    <TextBlock Grid.Row="2" Text="Site Details:" FontWeight="Bold" Margin="0,10,0,5"/>

                    <StackPanel Grid.Row="3" Margin="0,0,0,15">
                        <TextBlock Text="{Binding SelectedSite.Address}" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding SelectedSite.SiteCode}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding SelectedSite.SiteOwner.CompanyName}" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Orientation="Horizontal">
                        <Button Content="Load Inventory" Command="{Binding LoadInventoryCommand}"
                                Background="#2196F3" Foreground="White" Padding="10" Margin="0,0,10,0"/>
                        <Button Content="Export to Excel" Command="{Binding ExportToExcelCommand}"
                                Background="#4CAF50" Foreground="White" Padding="10"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Equipment Inventory Panel -->
            <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="5" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Current Equipment Inventory:" FontWeight="Bold" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1" x:Name="InventoryDataGrid"
                              ItemsSource="{Binding SiteEquipmentInventory}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Equipment Type" Binding="{Binding EquipmentType.Name}" Width="200"/>
                            <DataGridTextColumn Header="Current Quantity" Binding="{Binding CurrentQty}" Width="120"/>
                            <DataGridTextColumn Header="Last Updated" Binding="{Binding LastUpdateUtc}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="Total Equipment Types: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding SiteEquipmentInventory.Count}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                        <TextBlock Text="Total Items: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding TotalEquipmentItems}" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl> 