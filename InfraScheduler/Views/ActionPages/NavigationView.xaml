<UserControl x:Class="InfraScheduler.Views.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfraScheduler.Views"
             xmlns:vm="clr-namespace:InfraScheduler.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="280"
             FontFamily="Segoe UI">
    
    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16">
            <StackPanel Margin="0,0,0,16">
                <!-- MAIN Section -->
                <Button Command="{Binding ShowMainLandingCommand}"
                        Content="MAIN"
                        FontWeight="SemiBold"
                        FontSize="18"
                        Foreground="#333333"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,4"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="0,16,0,8"
                        Focusable="False"/>
                <Border Height="1" Background="#E0E0E0" Margin="0,0,0,16"/>
                
                <!-- DELIVERY Section -->
                <Button Command="{Binding ShowJobManagementLandingCommand}"
                        Content="DELIVERY"
                        FontWeight="SemiBold"
                        FontSize="18"
                        Foreground="#333333"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,4"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="0,16,0,8"
                        Focusable="False"/>
                <Border Height="1" Background="#E0E0E0" Margin="0,0,0,16"/>
                
                <!-- TEAMS Section -->
                <Button Command="{Binding ShowTechnicianManagementLandingCommand}"
                        Content="TEAMS"
                        FontWeight="SemiBold"
                        FontSize="18"
                        Foreground="#333333"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,4"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="0,16,0,8"
                        Focusable="False"/>
                <Border Height="1" Background="#E0E0E0" Margin="0,0,0,16"/>
                
                <!-- INVENTORY Section -->
                <Button Command="{Binding ShowEquipmentManagementLandingCommand}"
                        Content="INVENTORY"
                        FontWeight="SemiBold"
                        FontSize="18"
                        Foreground="#333333"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,4"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="0,16,0,8"
                        Focusable="False"/>
                <Border Height="1" Background="#E0E0E0" Margin="0,0,0,16"/>
                
                <!-- DATABASE Section -->
                <Button Command="{Binding ShowSiteManagementLandingCommand}"
                        Content="DATABASE"
                        FontWeight="SemiBold"
                        FontSize="18"
                        Foreground="#333333"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,4"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="0,16,0,8"
                        Focusable="False"/>
                <Border Height="1" Background="#E0E0E0" Margin="0,0,0,16"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 