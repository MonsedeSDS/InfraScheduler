<UserControl x:Class="InfraScheduler.Views.SiteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             FontFamily="Segoe UI">

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Windows 10 Header with Navigation Path -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="24,16,24,16">
            <StackPanel>
                <!-- Navigation Breadcrumb -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Home" Foreground="#0078D4" FontSize="14" FontWeight="Normal"/>
                    <TextBlock Text=" > " Foreground="#666666" FontSize="14" Margin="8,0,8,0"/>
                    <TextBlock Text="Database" Foreground="#666666" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text=" > " Foreground="#666666" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Sites" Foreground="#666666" FontSize="14" FontWeight="Normal"/>
                </StackPanel>
                
                <!-- Main Heading -->
                <TextBlock Text="Site Management" FontSize="32" FontWeight="Light" Foreground="#333333"/>
                
                <!-- Subtitle -->
                <TextBlock Text="Manage sites, locations, and tenant assignments" FontSize="16" Foreground="#666666" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24">
            <StackPanel>
                <!-- Search Bar -->
                <Border Background="White" CornerRadius="4" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Search Sites" FontSize="20" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,16"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Search Site:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                            <TextBox Grid.Column="1" Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="12,8" VerticalContentAlignment="Center" Height="36"
                                     Background="White" BorderBrush="#E0E0E0" BorderThickness="1" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Main Content -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Form Panel -->
                    <Border Grid.Column="0" Background="White" CornerRadius="4" Padding="24" Margin="0,0,16,0">
                        <StackPanel>
                            <TextBlock Text="Site Details" FontSize="20" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Site Name:" Grid.Row="0" Margin="0,0,0,5" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                                <TextBox Grid.Row="1" Text="{Binding SiteName, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,10" Padding="12,8" Height="36"
                                         Background="White" BorderBrush="#E0E0E0" BorderThickness="1" FontSize="14"/>

                                <TextBlock Text="Site Code:" Grid.Row="2" Margin="0,0,0,5" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                                <TextBox Grid.Row="3" Text="{Binding SiteCode, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,10" Padding="12,8" Height="36"
                                         Background="White" BorderBrush="#E0E0E0" BorderThickness="1" FontSize="14"/>

                                <TextBlock Text="Address:" Grid.Row="4" Margin="0,0,0,5" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                                <TextBox Grid.Row="5" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,10" Padding="12,8" Height="36"
                                         Background="White" BorderBrush="#E0E0E0" BorderThickness="1" FontSize="14"/>

                                <TextBlock Text="Latitude:" Grid.Row="6" Margin="0,0,0,5" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                                <TextBox Grid.Row="7" Text="{Binding Latitude, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,10" Padding="12,8" Height="36"
                                         Background="White" BorderBrush="#E0E0E0" BorderThickness="1" FontSize="14"/>

                                <TextBlock Text="Longitude:" Grid.Row="8" Margin="0,0,0,5" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                                <TextBox Grid.Row="9" Text="{Binding Longitude, UpdateSourceTrigger=PropertyChanged}" 
                                         Margin="0,0,0,10" Padding="12,8" Height="36"
                                         Background="White" BorderBrush="#E0E0E0" BorderThickness="1" FontSize="14"/>

                                <TextBlock Text="Site Owner:" Grid.Row="10" Margin="0,0,0,5" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                                <ComboBox Grid.Row="11" ItemsSource="{Binding SiteOwners}"
                                          SelectedValuePath="Id"
                                          SelectedValue="{Binding SiteOwnerId, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="CompanyName"
                                          MinWidth="200"
                                          MaxWidth="300"
                                          MinHeight="36"
                                          MaxHeight="36"
                                          Padding="12,8"
                                          Margin="0,0,0,10"
                                          Background="White" BorderBrush="#E0E0E0" BorderThickness="1" FontSize="14"/>

                                <!-- Tenant Management -->
                                <TextBlock Text="Site Tenants:" Grid.Row="12" Margin="0,0,0,5" FontSize="14" FontWeight="Medium" Foreground="#333333"/>
                                <Grid Grid.Row="13" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" ItemsSource="{Binding AvailableClients}"
                                             SelectedItem="{Binding SelectedClient, UpdateSourceTrigger=PropertyChanged}"
                                             DisplayMemberPath="Name"
                                             MinWidth="200"
                                             MaxWidth="300"
                                             MinHeight="36"
                                             MaxHeight="36"
                                             Padding="12,8"
                                             Background="White" BorderBrush="#E0E0E0" BorderThickness="1" FontSize="14"/>
                                    <Button Grid.Column="1" Content="Add Tenant" 
                                            Command="{Binding AddTenantCommand}"
                                            Margin="8,0,0,0" Padding="12,8" Height="36"
                                            Background="#0078D4" Foreground="White" BorderThickness="0" FontSize="14"/>
                                </Grid>

                                <!-- Selected Tenants List -->
                                <DataGrid Grid.Row="14" ItemsSource="{Binding SelectedTenants}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          HeadersVisibility="None"
                                          Margin="0,0,0,10"
                                          MinHeight="100"
                                          MaxHeight="200"
                                          Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                                    <Setter Property="Padding" Value="12,8"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTemplateColumn Width="Auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Remove" 
                                                            Command="{Binding DataContext.RemoveTenantCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="8,4" Padding="8,4"
                                                            Background="#E81123" Foreground="White" BorderThickness="0" FontSize="12"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel Grid.Row="15" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                                    <Button Width="100" Content="Add" Margin="0,0,10,0" Command="{Binding AddSiteCommand}" 
                                            Padding="16,8" Height="36"
                                            Background="#0078D4" Foreground="White" BorderThickness="0" FontSize="14"/>
                                    <Button Width="100" Content="Update" Margin="0,0,10,0" Command="{Binding UpdateSiteCommand}" 
                                            Padding="16,8" Height="36"
                                            Background="White" Foreground="#0078D4" BorderBrush="#0078D4" BorderThickness="1" FontSize="14"/>
                                    <Button Width="100" Content="Delete" Command="{Binding DeleteSiteCommand}" 
                                            Padding="16,8" Height="36"
                                            Background="#E81123" Foreground="White" BorderThickness="0" FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- DataGrid -->
                    <Border Grid.Column="1" Background="White" CornerRadius="4" Padding="24">
                        <DataGrid ItemsSource="{Binding Sites}"
                                  SelectedItem="{Binding SelectedSite, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="True"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  MinRowHeight="30"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="MinHeight" Value="30"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Site Name" Binding="{Binding SiteName, UpdateSourceTrigger=PropertyChanged}" Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Site Code" Binding="{Binding SiteCode, UpdateSourceTrigger=PropertyChanged}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Address" Binding="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Latitude" Binding="{Binding Latitude, UpdateSourceTrigger=PropertyChanged}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Longitude" Binding="{Binding Longitude, UpdateSourceTrigger=PropertyChanged}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Site Owner" Binding="{Binding SiteOwner.CompanyName, UpdateSourceTrigger=PropertyChanged}" Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Tenants" Binding="{Binding TenantList}" Width="250">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
