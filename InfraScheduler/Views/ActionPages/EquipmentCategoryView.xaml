<UserControl x:Class="InfraScheduler.Views.EquipmentCategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfraScheduler.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20">
            <StackPanel>
                <TextBlock Text="Equipment Categories" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Manage equipment categories and types" 
                           FontSize="14" 
                           Foreground="#bdc3c7" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Equipment Categories List -->
            <Border Grid.Column="0" 
                    BorderBrush="#ecf0f1" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0" 
                            Background="#34495e" 
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Equipment Categories" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <Button Grid.Column="1" 
                                    Content="Refresh" 
                                    Command="{Binding LoadDataCommand}" 
                                    Background="#3498db" 
                                    Foreground="White" 
                                    BorderThickness="0" 
                                    Padding="15,5"/>
                        </Grid>
                    </Border>

                    <!-- Categories DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding EquipmentCategories}" 
                              SelectedItem="{Binding SelectedEquipmentCategory}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              CanUserDeleteRows="False" 
                              IsReadOnly="True" 
                              GridLinesVisibility="Horizontal" 
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                            <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Actions Panel -->
            <Border Grid.Column="1" 
                    BorderBrush="#ecf0f1" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Width="250">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Actions Header -->
                    <Border Grid.Row="0" 
                            Background="#34495e" 
                            Padding="15">
                        <TextBlock Text="Actions" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                    </Border>

                    <!-- Actions -->
                    <StackPanel Grid.Row="1" Margin="15">
                        <Button Content="Add New Category" 
                                Command="{Binding AddCommand}" 
                                Background="#27ae60" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Padding="15,8" 
                                Margin="0,0,0,10"/>
                        
                        <Button Content="Edit Category" 
                                Command="{Binding EditCommand}" 
                                IsEnabled="{Binding IsCategorySelected}" 
                                Background="#3498db" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Padding="15,8" 
                                Margin="0,0,0,10"/>
                        
                        <Button Content="Delete Category" 
                                Command="{Binding DeleteCommand}" 
                                IsEnabled="{Binding IsCategorySelected}" 
                                Background="#e74c3c" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Padding="15,8" 
                                Margin="0,0,0,10"/>
                        
                        <Separator Margin="0,10"/>
                        
                        <TextBlock Text="Selected Category:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedEquipmentCategory.Name}" 
                                   FontSize="14" 
                                   Foreground="#495057"/>
                        <TextBlock Text="{Binding SelectedEquipmentCategory.Description}" 
                                   FontSize="12" 
                                   Foreground="#6c757d" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl> 