<UserControl x:Class="InfraScheduler.Views.AutoSchedulerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InfraScheduler.ViewModels"
             Height="400" Width="600">

    

    <StackPanel Margin="20">
        <Button Content="Run Auto Scheduling" Command="{Binding RunAutoScheduleCommand}" Width="200" Margin="0,0,0,20"/>
        <ListBox ItemsSource="{Binding SchedulingReport}" />
    </StackPanel>
</UserControl>
