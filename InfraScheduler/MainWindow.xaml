<Window x:Class="InfraScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:coreViews="clr-namespace:InfraScheduler.Core.Views"
        xmlns:local="clr-namespace:InfraScheduler.Views"
        mc:Ignorable="d"
        Title="InfraScheduler - Infrastructure Management System"
        Width="1400"
        Height="900"
        MinWidth="1200"
        MinHeight="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FAFAFA"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- Window-specific styles -->
        <Style x:Key="WindowTitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Navigation Panel with Windows 10 styling -->
        <Border Grid.Column="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0">
            <coreViews:NavigationView />
        </Border>
        
        <!-- Content Area with Windows 10 styling -->
        <Border Grid.Column="1" 
                Background="#FAFAFA" 
                Margin="0">
            <ContentControl Content="{Binding CurrentView}" 
                           Margin="0" />
        </Border>
    </Grid>
</Window> 